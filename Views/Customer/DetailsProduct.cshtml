@model Product
@{
    ViewData["Title"] = "DetailsProduct";
}

<h1>Details</h1>

<div class="card" style="width: 18rem;position:relative;margin-left:500px;">
    <img class="card-img-top" src="/assets/img/portfolio/Images/@Model.Image" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Quantity</p>
        <a href="/Customer/Products/" class="btn btn-primary">Back to List</a>
    </div>
</div>
