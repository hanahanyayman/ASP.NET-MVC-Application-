@model ProductsCard
@{
    ViewData["Title"] = "AddToCard";
    SelectList cardsOptions = new SelectList(ViewBag.cards, "Id", "Name");
    SelectList productsOptions = new SelectList(ViewBag.products, "Id", "Name");
    SelectList remainingQuentitiesOptions = new SelectList(ViewBag.remainQuentity);
    //SelectList usersOptions = new SelectList(ViewBag.users,"Id","Name");
}

<h1>Add to My Card</h1>


<form method="post" asp-action="AddToCard" asp-controller="Customer">
    <div class="form-group">
        <label asp-for="ProductId"></label>
        <select asp-for="ProductId" asp-items="productsOptions" class="form-control" id="selectId">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="RemainingQuatity"></label>
        <select asp-for="RemainingQuatity" asp-items="remainingQuentitiesOptions" class="form-control" id="selectId">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Quatity"></label>
        <input asp-for="Quatity" class="form-control">
        <span asp-validation-for="Quatity" class="text-danger"></span>
    </div>
     <div class="form-group">
    <label asp-for="CardId"></label>
    <select asp-for="CardId" asp-items="cardsOptions" class="form-control">
    </select>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Add</button>
</form>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

